    "jest-environment-node": "^26.6.2",
    "jest-image-snapshot": "^4.5.0",
    "jest-playwright-preset": "^1.6.0",
    "jest-runner": "^26.6.3",
    "playwright": "^1.11.1",
    "react-app-rewired": "^2.1.6",
